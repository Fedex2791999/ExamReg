<div class="modal_custom">
  <!-- The Modal -->
  <div class="modal" id="myModal">
      <div class="modal-dialog">
          <div class="modal-content">

              <!-- Modal Header -->
              <div class="modal-header">
                  <h4 class="modal-title" style="color: #006EB6;font-weight:700;font-size: 30px">Thêm Thông Tin
                      Sinh Viên</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>

              <!-- Modal body -->
              <div class="modal-body">     
                    <table >
                      <tbody>
                        <tr>
                          <td> <label id="icon" for="name"><i class="fas fa-id-card "></i>  Mã sinh viên:</label></td>
                          <td><input type="text" name="mã_sinh_viên" id="mã_sinh_viên" class="ip1"></td>
                        </tr>
                        <tr>
                            <td><label id="icon" for="name"><i class="fas fa-user "></i>  Họ và tên: </label></td>
                            <td><input type="text" name="họ_và_tên" id="họ_và_tên" class="ip2"></td>
                          </tr>
                          <tr>
                              <td><label id="icon" for="name"><i class="fa fa-calendar "></i>  Năm sinh:</label></td>
                              <td><input type="text" name="năm_sinh" id="năm_sinh" class="ip3"></td>
                            </tr>
                            <tr>
                                <td><label id="icon" for="name"><i class="fas fa-school"></i>  Lớp:</label></td>
                                <td><input type="text" name="lớp" id="lớp" class="ip5"></td>
                              </tr>
                      </tbody>
                    </table>                
              </div>

              <!-- Modal footer -->
              <div class="modal-footer">
                  <input type="submit" name="acept" class="btn btn-primary"  value="Xác nhận">
              </form>
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
              </div>

          </div>
      </div>
  </div>
</div>

